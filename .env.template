# =============================================================================
# NAS 自动化系统环境变量配置
# 复制此文件为 .env 并根据实际情况修改配置
# =============================================================================

# 基础系统配置
PUID=1000                           # 用户ID，使用 id -u 查看
PGID=1000                           # 组ID，使用 id -g 查看
TZ=Asia/Shanghai                    # 时区设置
UMASK=022                           # 文件权限掩码

# 网络配置
DOMAIN=nas.local                    # 域名（可选）
HTTP_PORT=80                        # HTTP端口
HTTPS_PORT=443                      # HTTPS端口

# 路径配置
DATA_PATH=/opt/nas-data            # 数据根目录
DOWNLOAD_PATH=/opt/nas-data/downloads  # 下载目录
MEDIA_PATH=/opt/nas-data/media     # 媒体库目录
CONFIG_PATH=/opt/nas-data/config   # 配置目录

# =============================================================================
# MoviePilot 总调度中心配置
# =============================================================================
MOVIEPILOT_SUPERUSER=admin         # 超级用户名
MOVIEPILOT_SUPERUSER_PASSWORD=password123  # 超级用户密码
MOVIEPILOT_API_TOKEN=your_api_token_here    # API令牌，安装后自动生成

# MoviePilot 高级配置
MOVIEPILOT_AUTO_UPDATE=true        # 自动更新
MOVIEPILOT_BIG_MEMORY_MODE=true    # 大内存模式
MOVIEPILOT_DEV=false               # 开发模式

# =============================================================================
# Emby 媒体服务器配置
# =============================================================================
EMBY_API_KEY=your_emby_api_key_here  # Emby API密钥，首次配置后获取

# =============================================================================
# qBittorrent 下载器配置
# =============================================================================
QB_USERNAME=admin                   # qBittorrent 用户名
QB_WEBUI_PASSWORD=adminpass        # qBittorrent 密码
QB_WEBUI_PORT=8080                 # Web界面端口

# =============================================================================
# Transmission 保种下载器配置
# =============================================================================
TRANSMISSION_USER=admin            # Transmission 用户名
TRANSMISSION_PASS=password123      # Transmission 密码
TRANSMISSION_DOWNLOAD_DIR=/downloads/complete  # 下载完成目录
TRANSMISSION_INCOMPLETE_DIR=/downloads/incomplete  # 下载中目录
TRANSMISSION_WATCH_DIR=/downloads/watch          # 监控目录

# =============================================================================
# CookieCloud 配置
# =============================================================================
COOKIECLOUD_HOST=0.0.0.0          # 监听地址
COOKIECLOUD_PORT=8088             # 监听端口

# =============================================================================
# ChineseSubFinder 字幕下载配置
# =============================================================================
CSF_LOG_LEVEL=info                # 日志级别
CSF_WEB_PORT=19035               # Web界面端口

# =============================================================================
# IYUU 自动辅种配置
# =============================================================================
IYUU_TOKEN=your_iyuu_token_here   # IYUU令牌，需要注册获取
IYUU_CRON=0 */6 * * *             # 执行计划，每6小时一次

# =============================================================================
# Vertex 刷流工具配置
# =============================================================================
VERTEX_PASSWORD=adminpass         # Vertex Web界面密码

# =============================================================================
# 媒体库扩展服务配置
# =============================================================================

# Komga 漫画服务器
KOMGA_JAVA_OPTS=-Xmx2g            # JVM内存配置

# Audiobookshelf 有声书
AUDIOBOOKSHELF_CONFIG_PATH=/config  # 配置路径
AUDIOBOOKSHELF_METADATA_PATH=/metadata  # 元数据路径

# Navidrome 音乐服务器
ND_SCANSCHEDULE=1h                # 扫描间隔
ND_LOGLEVEL=info                  # 日志级别
ND_SESSIONTIMEOUT=24h             # 会话超时
ND_BASEURL=                       # 基础URL（反向代理时使用）

# Calibre 电子书
CALIBRE_CONFIG_PATH=/config       # 配置路径

# Reader 小说阅读器
READER_APP_USERLIMIT=50           # 用户数量限制
READER_APP_USERBOOKLIMIT=200      # 每用户图书限制
READER_APP_CACHECHAPTERCONTENT=true  # 缓存章节内容

# =============================================================================
# 工具服务配置
# =============================================================================

# Homepage 导航页
HOMEPAGE_CONFIG_PATH=/app/config  # 配置路径

# FreshRSS
FRESHRSS_CRON_MIN=1,31           # RSS更新时间

# RSSHub
RSSHUB_CACHE_TYPE=redis          # 缓存类型
RSSHUB_REDIS_URL=redis://redis:6379/  # Redis连接

# Metube 视频下载
METUBE_DOWNLOAD_PATH=/downloads/videos  # 下载路径

# =============================================================================
# 监控和告警配置
# =============================================================================

# UptimeKuma 监控
UPTIME_KUMA_PORT=9001            # 监控页面端口

# 告警阈值配置
ALERT_CPU_THRESHOLD=80           # CPU使用率告警阈值(%)
ALERT_MEMORY_THRESHOLD=85        # 内存使用率告警阈值(%)
ALERT_DISK_THRESHOLD=90          # 磁盘使用率告警阈值(%)

# =============================================================================
# 微信通知配置（可选）
# =============================================================================
WECHAT_CORP_ID=your_corp_id      # 企业微信Corp ID
WECHAT_CORP_SECRET=your_corp_secret  # 企业微信Secret
WECHAT_AGENT_ID=your_agent_id    # 企业微信Agent ID
WECHAT_TO_USER=@all              # 接收用户

# =============================================================================
# PT站点配置（根据实际使用的站点配置）
# =============================================================================
PT_SITES_CONFIG=your_pt_sites_config  # PT站点配置，JSON格式

# =============================================================================
# 网络代理配置（如需要）
# =============================================================================
HTTP_PROXY=                      # HTTP代理
HTTPS_PROXY=                     # HTTPS代理
NO_PROXY=localhost,127.0.0.1    # 不使用代理的地址

# =============================================================================
# 高级配置
# =============================================================================

# Docker 网络配置
DOCKER_NETWORK_SUBNET=172.20.0.0/16  # Docker网络子网

# 日志配置
LOG_LEVEL=info                   # 全局日志级别
LOG_MAX_SIZE=10m                 # 日志文件最大大小
LOG_MAX_FILES=3                  # 日志文件保留数量

# 性能优化
ENABLE_HARDWARE_ACCELERATION=true    # 启用硬件加速
MAX_DOWNLOAD_SPEED=0            # 最大下载速度限制(KB/s)，0为不限制
MAX_UPLOAD_SPEED=0              # 最大上传速度限制(KB/s)，0为不限制

# 安全配置
ENABLE_HTTPS=false              # 启用HTTPS
SSL_CERT_PATH=                  # SSL证书路径
SSL_KEY_PATH=                   # SSL密钥路径

# 备份配置
BACKUP_SCHEDULE=0 2 * * *       # 备份计划，每天凌晨2点
BACKUP_RETENTION_DAYS=7         # 备份保留天数
BACKUP_REMOTE_PATH=             # 远程备份路径（可选）